<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".StockUpdate">

    <TextView
        android:id="@+id/txvStockUpdateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StockName"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/etxStockUpdateQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity (gr)"
        android:textSize="25sp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnConfirmStockUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm change"
        android:layout_marginTop="15dp"
        />
</LinearLayout>